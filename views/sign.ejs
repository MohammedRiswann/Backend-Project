<!DOCTYPE html>
<html>
  <head>
    <title>Signup Form</title>
  </head>

  <body>
    <h1>Signup</h1>
    <form action="/user/signup" method="POST" id="SignupForm">
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        value="riswan14.rm@gmail.com"
      />
      <p style="color: red" id="mailError"></p>
      <br /><br />

      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        onblur="validation()"
      /><br /><br />
      <p style="color: red" id="passwordError"></p>

      <br /><br />

      <input type="submit" value="Signup" />
    </form>
    <script src="../validation/validation.js"></script>
  </body>
</html>
