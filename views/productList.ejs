<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Product List</title>
    <style>
      body {
        background-color: #252a2f; /* Dark green background */
        color: #fff; /* White text for contrast */
        font-family: sans-serif;
        font-size: 16px;
      }

      h1 {
        color: #2ecc71; /* Vibrant green heading */
        text-align: center;
        font-size: 2rem;
        margin-top: 20px;
        margin-bottom: 30px;
      }

      table {
        width: 80%;
        margin: 0 auto;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 10px;
        text-align: left;
        border: 1px solid #343a40; /* Darker border for separation */
      }

      th {
        background-color: #2ecc71; /* Green header background */
      }

      td img {
        border-radius: 5px; /* Rounded image corners */
      }

      a {
        color: #2ecc71; /* Green links */
        text-decoration: none;
      }

      a:hover {
        color: #39b54a; /* Darker green on hover */
      }
    </style>
  </head>
  <body>
    <h1>Product List</h1>

    <% if (products && products.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
          <td>
            <img
              src="<%=product.imagePath.replace('public/uploads','')%>"
              style="width: 100px; height: auto; border-radius: 5px"
            />
          </td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td>
            <a href="/admin/updateProduct/<%= product.id %>">Update</a> |
            <a href="/admin/deleteProduct/<%= product.id %>">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
    <p style="color: #95a5a6">No products available.</p>
    <% } %>

    <a href="/admin/addProduct" style="display: block; margin-top: 20px"
      >Add Product</a
    >
  </body>
</html>
