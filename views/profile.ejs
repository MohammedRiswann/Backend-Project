<!DOCTYPE html>
<html lang="en">
  <head>
    <title>User Profile</title>
    <!-- Your styles -->
  </head>
  <body>
    <form action="/user/submit-form" method="POST">
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        value="<%= data[0]?.fulldetails[0]?.name || '' %>"
      />

      <label for="address">Address:</label>
      <input
        type="text"
        id="address"
        name="address"
        required
        value="<%= data[0]?.fulldetails[0]?.address || '' %>"
      />

      <label for="phoneNumber">Phone Number:</label>
      <input
        type="text"
        id="phoneNumber"
        name="phoneNumber"
        required
        value="<%= data[0]?.fulldetails[0]?.phoneNumber || '' %>"
      />

      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        value="<%= data[0]?.email || '' %>"
      />

      <button type="submit">Submit</button>
    </form>
  </body>
</html>
